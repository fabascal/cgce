<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_razon__social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cg.ce.app.chris.com.cgce.Razon_Social"
    android:background="@drawable/fondogris">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/spn_estacion"
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:background="@drawable/spinner_back"
            style="@android:style/TextAppearance.Holo.Widget.TextView.SpinnerItem"
            android:layout_height="wrap_content"
            android:theme="@style/spinner_style"
            android:fadingEdge="horizontal|vertical"
            android:gravity="center_vertical|start"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_below="@+id/spn_estacion"
            android:id="@+id/ll_razon"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:text="@string/razonsocial"
                android:id="@+id/tv_razonsocial"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_tablet_config" />

            <EditText
                android:layout_weight="2"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_razonsocial"
                android:layout_width="280dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_razon"
            android:id="@+id/ll_rfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:text="@string/rfc"
                android:id="@+id/tv_rfc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_tablet_config"/>

            <EditText
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_rfc"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:hint="@string/cveest"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_cveest"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_rfc"
            android:id="@+id/ll_calle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/calle"
                android:id="@+id/tv_calle"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_calle"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_calle"
            android:id="@+id/ll_numext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/numext"
                android:id="@+id/tv_numext"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:inputType="number"
                android:id="@+id/et_numext"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="@dimen/text_tablet_config"
                android:hint="@string/numint"
                android:layout_weight="1"
                android:id="@+id/et_numint"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_numext"
            android:id="@+id/ll_colonia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/colonia"
                android:id="@+id/tv_colonia"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_colonia"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_colonia"
            android:id="@+id/ll_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/cp"
                android:id="@+id/tv_cp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="number"
                android:layout_weight="2"
                android:id="@+id/et_cp"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_cp"
            android:id="@+id/ll_localidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/localidad"
                android:id="@+id/tv_localidad"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_localidad"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_localidad"
            android:id="@+id/ll_municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/municipio"
                android:id="@+id/tv_municipio"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_municipio"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_municipio"
            android:id="@+id/ll_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/text_tablet_config"
                android:layout_weight="1"
                android:text="@string/Estado"
                android:id="@+id/tv_estado"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_estado"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_estado"
            android:id="@+id/ll_pais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/text_tablet_config"
                android:layout_weight="1"
                android:text="@string/pais"
                android:id="@+id/tv_pais"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:textSize="@dimen/text_tablet_config"
                android:layout_weight="2"
                android:id="@+id/et_pais"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_below="@+id/ll_pais"
            android:id="@+id/ll_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/text_tablet_config"
                android:text="@string/telefono"
                android:id="@+id/tv_telefono"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_weight="2"
                android:inputType="phone"
                android:textSize="@dimen/text_tablet_config"
                android:id="@+id/et_telefono"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_dfinserta"
            android:background="@drawable/button_login_rounded"
            android:textColor="@color/colorGreyLight"
            android:textSize="@dimen/text_tablet"
            android:layout_marginTop="10dp"
            android:text="@string/btn_odbc_actualizar"
            android:layout_below="@+id/ll_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</ScrollView>
