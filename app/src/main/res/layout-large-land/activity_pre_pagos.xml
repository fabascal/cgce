<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="cg.ce.app.chris.com.cgce.ActivityPrePagos"
    android:background="@drawable/fondorepsolgris">
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/CardViewVale"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/cardview_width"
        android:layout_height="@dimen/cardview_height"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:cardElevation="@dimen/cardElevation"
        android:layout_marginTop="@dimen/cardview_marginTop"
        android:layout_below="@id/CardViewCredito"
        app:cardBackgroundColor="#E6E6E6"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.496">
        <TextView
            android:layout_marginTop="0dp"
            android:id="@+id/cv_textVale"
            android:text="@string/vale"
            android:layout_width="280dp"
            android:textSize="@dimen/TextView_venta"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:textStyle="normal|bold" />
        <ImageView
            android:id="@+id/imageviewVale"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/vale"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewAnticipo"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_below="@id/CardViewCredito"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:visibility="gone"
        app:cardBackgroundColor="#E6E6E6"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/CardViewVale"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/cv_textVale1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginTop="0dp"
            android:text="@string/anticipo"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageviewVale1"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/vale" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewCine"
        android:layout_width="@dimen/cardview_width"
        android:layout_height="@dimen/cardview_height"
        card_view:cardCornerRadius="@dimen/cardCornerRadius"
        card_view:cardElevation="@dimen/cardElevation"
        android:layout_marginTop="@dimen/cardview_marginTop"
        android:layout_below="@id/CardViewAnticipo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:cardBackgroundColor="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardViewAnticipo"
        app:layout_constraintVertical_bias="0.104">

        <TextView
            android:id="@+id/cv_textCine"
            android:layout_width="280dp"
            android:textSize="@dimen/TextView_venta"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:textColor="@color/RespsolAzul"
            android:textStyle="normal|bold"
            android:text="@string/cine"/>

        <ImageView
            android:id="@+id/imageviewCine"
            android:layout_width="@dimen/ImageView_width"
            android:layout_height="@dimen/ImageView_width"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="start"
            android:src="@drawable/repsolboletos" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
