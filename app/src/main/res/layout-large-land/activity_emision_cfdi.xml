<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_emision_cfdi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cg.ce.app.chris.com.cgce.EmisionCfdi"
    android:background="@drawable/fondorepsolgris">

    <TextView
        android:id="@+id/title_activitie"
        android:text="@string/title_activitie"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        style="@style/repsoldatacliente"/>
    <View
        android:id="@+id/vtitle"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/RespsolAzul"
        android:layout_below="@id/title_activitie"/>
    <View
        android:layout_marginTop="2dp"
        android:id="@+id/vtitle2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/RespsolAzul"
        android:layout_below="@id/vtitle"/>
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/title_generales"
        android:text="@string/title_generales"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vtitle2"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        style="@style/repsoldatacliente"/>
    <View
        android:id="@+id/vgenerales"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/RespsolAzul"
        android:layout_below="@id/title_generales"/>
    <TextView
        android:id="@+id/tvrazon"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vgenerales"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvrfc"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvrazon"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvdomicilio"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvrfc"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvcolonia"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdomicilio"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvestado"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcolonia"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvciudad"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvestado"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvcp"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvciudad"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvmetodo"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcp"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvcuenta"
        android:textSize="@dimen/text_cfdi"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmetodo"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/title_ticket"
        android:text="@string/title_ticket"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcuenta"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        style="@style/repsoldatacliente"/>
    <View
        android:id="@+id/vticket"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/RespsolAzul"
        android:layout_below="@id/title_ticket"/>
    <TextView
        android:id="@+id/tvfolio"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vticket"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvvendedor"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvfolio"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvproducto"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvvendedor"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvprecio"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvproducto"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvvolumen"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvprecio"
        style="@style/repsoldatacliente"/>
    <TextView
        android:id="@+id/tvimporte"
        android:textSize="@dimen/text_cfdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvvolumen"
        style="@style/repsoldatacliente"/>
    <EditText
        android:id="@+id/etcomentarios"
        android:textSize="@dimen/text_cfdi"
        android:hint="@string/etcomenarios"
        android:visibility="gone"
        android:maxLength="300"
        android:layout_below="@id/tvimporte"
        android:layout_width="350dp"
        android:layout_height="95dp"
        style="@style/repsoldatacliente"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnwebservice"
        android:text="@string/btnwebservice"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:background="@drawable/button_cfdi_rounded_repsol" />

</RelativeLayout>
