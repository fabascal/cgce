<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cg.ce.app.chris.com.cgce.AceiteCreditoMetodo"
    android:orientation="vertical"
    android:background="@drawable/fondorepsolgris">
    <TextView
        android:id="@+id/tvaceite"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45dp"
        android:text="@string/aceite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/repsoldatacliente"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/RespsolAzul" />

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewRFID"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_gravity="center_horizontal"
        android:layout_width="260dp"
        android:layout_height="90dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#E6E6E6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageviewTag"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_gravity="start"
            android:src="@drawable/rfidrepsol"/>

        <TextView
            android:layout_marginTop="0dp"
            android:id="@+id/cv_textTag"
            android:text="@string/nfc"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            style="@style/repsoldatacliente"/>

    </android.support.v7.widget.CardView>


</LinearLayout>
