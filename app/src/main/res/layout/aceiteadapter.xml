<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border">


    <LinearLayout
        android:id="@+id/ll_aceite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorGreyLight">

        <ImageView
            android:id="@+id/producto_imagen"
            android:tag="image_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/aceite_logo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/producto_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:textSize="18sp"
                android:text="Android Name"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <LinearLayout
                android:weightSum="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/producto_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Android Version"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:id="@+id/producto_precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Android Version"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/producto_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:text="@string/nombre"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDelete"
            android:background="@drawable/ic_clear_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




</android.support.v7.widget.CardView>