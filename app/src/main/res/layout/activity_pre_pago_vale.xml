<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cg.ce.app.chris.com.cgce.ActivityPrePagoVale"
    android:background="@drawable/fondogris">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="4dp"
            android:text="@string/vale"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtnscan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@drawable/barscan" />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_marginLeft="40dp"
            android:adjustViewBounds="true"
            android:id="@+id/imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ok"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="351dp"
        android:layout_height="433dp"
        android:orientation="vertical"
        android:layout_marginTop="-24dp"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        tools:layout_editor_absoluteX="40dp">
        <LinearLayout
            android:id="@+id/ll21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/ll1"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tvlabelcliente"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="@dimen/text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cliente" />

            <TextView
                android:id="@+id/tvcliente"
                android:visibility="gone"
                android:textSize="@dimen/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_cliente" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvlabelrfc"
                android:visibility="gone"
                android:textSize="@dimen/text_label"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_rfc"/>
            <TextView
                android:id="@+id/tvrfc"
                android:visibility="gone"
                android:textSize="@dimen/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_rfc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvlabeldenominacion"
                android:visibility="gone"
                android:textSize="@dimen/text_label"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_denominacion"/>
            <TextView
                android:id="@+id/tvdenominacion"
                android:visibility="gone"
                android:textSize="@dimen/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
    <ImageButton
        android:visibility="gone"
        android:layout_below="@+id/ll_bomba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imbtn_ticket"
        android:src="@drawable/ticket"
        android:background="#00000000"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="93dp"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginLeft="8dp" />



</android.support.constraint.ConstraintLayout>
