<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credito2Activity"
    android:background="@drawable/fondogris">

    <android.support.constraint.Guideline
        android:id="@+id/guidelinePosicion"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent=".2"/>
    <android.support.constraint.Guideline
        android:id="@+id/guidelineMiddle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent=".5"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/dispensario"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelinePosicion"
        app:layout_constraintEnd_toEndOf="@id/guidelineMiddle"
        app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/spn_dispensario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@id/guidelineMiddle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guidelinePosicion"
            android:background="@drawable/spinner_back"/>

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewRFID"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#E6E6E6"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/guidelinePosicion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/imageviewTag2"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/rfid" />
        <TextView
            android:id="@+id/cv_textTag2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginTop="0dp"
            android:text="@string/nfc"
            android:textSize="40sp"
            android:textStyle="normal|bold"
            style="@style/repsoldatacliente"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewNIP"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#E6E6E6"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CardViewRFID">
        <ImageView
            android:id="@+id/imageviewNip2"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/nip" />
        <TextView
            android:id="@+id/cv_textNip2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginTop="0dp"
            android:text="@string/nip"
            android:textSize="40sp"
            android:textStyle="normal|bold"
            style="@style/repsoldatacliente"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>