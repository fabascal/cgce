        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="ContentMainRepsol" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RepsolNaranja</item>
        <item name="colorPrimaryDark">@color/RepsolNaranjaDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/Blanco</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>
    <!-- Application theme. -->
    <style name="ContentRepsol" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RepsolNaranja</item>
        <item name="colorPrimaryDark">@color/RepsolNaranjaDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/Blanco</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>




    <style name="SearchTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RepsolNaranja</item>
        <item name="colorPrimaryDark">@color/RepsolNaranja</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextColor">@color/Blanco</item>
        <item name="colorButtonNormal">@color/Blanco</item>
    </style>


    <style name="spinner_style">
        <item name="colorAccent">@color/colorspinnerpress</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">533dp</item>
        <item name="android:showDividers">end</item>
        <item name="android:textColor">@color/RespsolAzul</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:popupBackground">@drawable/spinner_background</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@color/Blanco</item>
    </style>
    <style name="spinner_text">
        <item name="android:textSize">60dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="spinnerItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:popupBackground">@drawable/spinner_background</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="titulo">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="titulotpv">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="menu_repsol" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/RepsolNaranja</item>
        <item name="colorPrimaryDark">@color/RepsolNaranja</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="repsoltexto">
        <item name="android:textColor">@color/RespsolAzul</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="repsoldatacliente">
        <item name="android:textColor">@color/RespsolAzul</item>
    </style>
    <style name="VentasTextView">
        <item name="android:textColor">@color/RespsolAzul</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

</resources>
